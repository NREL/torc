#[cfg(test)]
mod tests {
    use torc_client::apis::configuration::Configuration;
    use torc_client::commands::workflows::{handle_workflow_commands, WorkflowCommands};

    #[test]
    fn test_reset_status_command_structure() {
        // Test that the ResetStatus command can be constructed with default values
        let reset_status_cmd = WorkflowCommands::ResetStatus {
            workflow_id: Some(1),
            user: Some("test_user".to_string()),
            failed_only: false,
            restart: false,
        };

        // Test that the command matches the expected structure
        match reset_status_cmd {
            WorkflowCommands::ResetStatus {
                workflow_id,
                user,
                failed_only,
                restart,
            } => {
                assert_eq!(workflow_id, Some(1));
                assert_eq!(user, Some("test_user".to_string()));
                assert_eq!(failed_only, false);
                assert_eq!(restart, false);
            }
            _ => panic!("Expected ResetStatus command"),
        }
    }

    #[test]
    fn test_reset_status_with_failed_only() {
        // Test ResetStatus command with failed_only set to true
        let reset_status_cmd = WorkflowCommands::ResetStatus {
            workflow_id: Some(2),
            user: Some("test_user".to_string()),
            failed_only: true,
            restart: false,
        };

        match reset_status_cmd {
            WorkflowCommands::ResetStatus { failed_only, .. } => {
                assert_eq!(failed_only, true);
            }
            _ => panic!("Expected ResetStatus command"),
        }
    }

    #[test]
    fn test_reset_status_with_restart() {
        // Test ResetStatus command with restart set to true
        let reset_status_cmd = WorkflowCommands::ResetStatus {
            workflow_id: Some(3),
            user: Some("test_user".to_string()),
            failed_only: false,
            restart: true,
        };

        match reset_status_cmd {
            WorkflowCommands::ResetStatus { restart, .. } => {
                assert_eq!(restart, true);
            }
            _ => panic!("Expected ResetStatus command"),
        }
    }

    #[test]
    fn test_reset_status_with_all_options() {
        // Test ResetStatus command with both failed_only and restart set to true
        let reset_status_cmd = WorkflowCommands::ResetStatus {
            workflow_id: Some(4),
            user: Some("test_user".to_string()),
            failed_only: true,
            restart: true,
        };

        match reset_status_cmd {
            WorkflowCommands::ResetStatus {
                failed_only,
                restart,
                ..
            } => {
                assert_eq!(failed_only, true);
                assert_eq!(restart, true);
            }
            _ => panic!("Expected ResetStatus command"),
        }
    }

    #[test]
    fn test_reset_status_with_none_workflow_id() {
        // Test ResetStatus command with None workflow_id (should prompt interactively)
        let reset_status_cmd = WorkflowCommands::ResetStatus {
            workflow_id: None,
            user: Some("test_user".to_string()),
            failed_only: false,
            restart: false,
        };

        match reset_status_cmd {
            WorkflowCommands::ResetStatus { workflow_id, .. } => {
                assert_eq!(workflow_id, None);
            }
            _ => panic!("Expected ResetStatus command"),
        }
    }
}
